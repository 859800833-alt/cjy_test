/**index.wxss**/
page {
  background: linear-gradient(135deg, #FF6B6B 0%, #4ECDC4 100%);
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.index-page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px;
  box-sizing: border-box;
}

.title-container {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48px;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
  margin-bottom: 16rpx;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28px;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

.rule-tip {
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  margin-bottom: 80rpx;
  backdrop-filter: blur(10px);
}

.rule-tip text {
  font-size: 28px;
  color: #FFFFFF;
}

.start-btn {
  width: 80%;
  height: 100rpx;
  background: #FFFFFF;
  border: none;
  border-radius: 50rpx;
  font-size: 36px;
  font-weight: bold;
  color: #FF6B6B;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.start-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.decoration {
  position: absolute;
  bottom: 60rpx;
  display: flex;
  gap: 40rpx;
}

.decoration-text {
  font-size: 40px;
  opacity: 0.7;
}
