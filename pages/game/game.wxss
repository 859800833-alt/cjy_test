/**game.wxss**/
page {
  background: #F5F5F5;
  height: 100vh;
}

.game-page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.timer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF4444;
  margin-bottom: 16rpx;
}

.progress-bar {
  width: 200rpx;
  height: 8rpx;
  background: #EEEEEE;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #FF4444;
  transition: width 1s linear;
}

.score {
  font-size: 28rpx;
  color: #333333;
}

.end-btn {
  padding: 12rpx 24rpx;
  background: #F44336;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.end-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.end-btn-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.word-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  margin: 32rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  min-height: 300rpx;
}

.word-mask {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: #EEEEEE;
  border-radius: 16rpx;
}

.mask-text {
  font-size: 32rpx;
  color: #999999;
}

.word-text {
  font-size: 64rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  line-height: 1.4;
}

.action-buttons {
  display: flex;
  height: 200rpx;
  margin: 32rpx;
}

.button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  margin: 0 16rpx;
  transition: all 0.2s ease;
}

.button:active {
  transform: scale(0.95);
}

.correct-btn {
  background: #4CAF50;
}

.skip-btn {
  background: #FF9800;
}

.button-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

